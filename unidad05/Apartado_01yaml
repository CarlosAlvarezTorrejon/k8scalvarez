apiVersion: apps/v1
kind: Deployment
metadata:
  creationTimestamp: null
  labels:
    app: deployment-unidad5-01
    aplicacion: reserva-hotel
  name: deployment-unidad5-01
spec:
  replicas: 3
  selector:
    matchLabels:
      app: deployment-unidad5-01
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 1
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: deployment-unidad5-01
    spec:
      containers:
       - image: ghcr.io/go-elevate/k8s4arch-hotels:monolith-v2
         name: deployment-unidad5-01
         ports:
           - containerPort: 80
         livenessProbe:
           tcpSocket:
            port: 80
           initialDelaySeconds: 60
           periodSeconds: 20
         readinessProbe:
           httpGet:
             path: /
             port: 80
           initialDelaySeconds: 60
           periodSeconds: 20
           
           envForm:
          -configMapRef:
            name: configmap-unidad05-1
